<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/order_detail_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_l">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/order_detail_back"
                        android:layout_width="@dimen/touch_target"
                        android:layout_height="@dimen/touch_target"
                        android:contentDescription="@string/action_back"
                        android:onClick="onBackClick"
                        android:src="@drawable/ic_back"
                        style="@style/Widget.Suyuan.IconButton" />

                    <TextView
                        android:id="@+id/order_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_s"
                        android:text="@string/order_detail_title"
                        android:textAppearance="@style/TextAppearance.Suyuan.Title" />
                </LinearLayout>

                <TextView
                    android:id="@+id/order_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_s"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/text_body" />

                <TextView
                    android:id="@+id/order_detail_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_s"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_caption" />

                <TextView
                    android:id="@+id/order_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_caption" />

                <TextView
                    android:id="@+id/order_detail_pay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_caption" />

                <TextView
                    android:id="@+id/order_detail_confirm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_caption" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_m"
                    android:background="@drawable/bg_card"
                    android:elevation="@dimen/elevation_s"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_address"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_body"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/order_detail_address_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_s"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_body" />

                    <TextView
                        android:id="@+id/order_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_caption" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_l"
                    android:text="@string/order_goods_title"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_detail_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_s"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/order_detail_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_m"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/text_subtitle"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/order_detail_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/surface"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xxl"
            android:visibility="gone">

            <TextView
                android:id="@+id/order_detail_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_error"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body" />

            <Button
                android:id="@+id/order_detail_state_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_m"
                style="@style/Widget.Suyuan.Button.Outline"
                android:text="@string/action_retry"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/order_detail_actions"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@color/surface"
        android:elevation="@dimen/elevation_m"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/spacing_l"
        android:paddingEnd="@dimen/spacing_l"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/order_action_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touch_target"
            android:layout_marginEnd="@dimen/spacing_s"
            style="@style/Widget.Suyuan.Button.Outline"
            android:text="@string/action_cancel" />

        <Button
            android:id="@+id/order_action_confirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touch_target"
            android:layout_marginEnd="@dimen/spacing_s"
            style="@style/Widget.Suyuan.Button.Outline"
            android:text="@string/action_confirm" />

        <Button
            android:id="@+id/order_action_pay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touch_target"
            style="@style/Widget.Suyuan.Button"
            android:text="@string/action_pay" />
    </LinearLayout>
</LinearLayout>
