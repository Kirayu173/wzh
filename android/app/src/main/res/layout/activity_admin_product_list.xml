<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/admin_product_list_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_l">

        <TextView
            android:id="@+id/admin_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/admin_product_title"
            android:textAppearance="@style/TextAppearance.Suyuan.Title" />

        <Button
            android:id="@+id/admin_product_add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touch_target"
            style="@style/Widget.Suyuan.Button"
            android:text="@string/admin_product_add" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/admin_product_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/admin_product_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="@dimen/spacing_l" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/admin_product_state_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/surface"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xxl"
            android:visibility="gone">

            <TextView
                android:id="@+id/admin_product_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_product_empty"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body" />

            <Button
                android:id="@+id/admin_product_state_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_m"
                style="@style/Widget.Suyuan.Button.Outline"
                android:text="@string/action_retry" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
