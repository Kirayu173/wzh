<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/detail_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/detail_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/spacing_m"
                    android:background="@drawable/bg_indicator"
                    android:paddingStart="@dimen/spacing_s"
                    android:paddingEnd="@dimen/spacing_s"
                    android:paddingTop="@dimen/spacing_xs"
                    android:paddingBottom="@dimen/spacing_xs"
                    android:text="@string/indicator_default"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_caption" />
                </FrameLayout>

                <TextView
                    android:id="@+id/detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_l"
                    android:layout_marginTop="@dimen/spacing_l"
                    android:layout_marginEnd="@dimen/spacing_l"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_subtitle" />

                <TextView
                    android:id="@+id/detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_l"
                    android:layout_marginTop="@dimen/spacing_s"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/text_subtitle" />

                <TextView
                    android:id="@+id/detail_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_l"
                    android:layout_marginTop="@dimen/spacing_s"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_body" />

                <TextView
                    android:id="@+id/detail_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_l"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_body" />

                <TextView
                    android:id="@+id/detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_l"
                    android:layout_marginTop="@dimen/spacing_m"
                    android:layout_marginEnd="@dimen/spacing_l"
                    android:layout_marginBottom="@dimen/spacing_l"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/detail_action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_height"
            android:background="@color/surface"
            android:elevation="@dimen/elevation_m"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/spacing_l"
            android:paddingEnd="@dimen/spacing_l">

            <TextView
                android:id="@+id/detail_minus"
                android:layout_width="@dimen/touch_target"
                android:layout_height="@dimen/touch_target"
                android:background="@drawable/bg_quantity_button"
                android:gravity="center"
                android:text="@string/symbol_minus"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/detail_quantity"
                android:layout_width="40dp"
                android:layout_height="@dimen/touch_target"
                android:gravity="center"
                android:text="@string/quantity_default"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/detail_plus"
                android:layout_width="@dimen/touch_target"
                android:layout_height="@dimen/touch_target"
                android:background="@drawable/bg_quantity_button"
                android:gravity="center"
                android:text="@string/symbol_plus"
                android:textColor="@color/text_primary" />

            <Button
                android:id="@+id/button_add_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_l"
                android:layout_weight="1"
                android:text="@string/action_add_cart" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_state_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xxl"
        android:visibility="gone">

        <TextView
            android:id="@+id/detail_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_error"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_body" />

        <Button
            android:id="@+id/detail_state_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.Button.Outline"
            android:text="@string/action_retry" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/detail_progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/color_primary"
        android:visibility="gone" />

</FrameLayout>
