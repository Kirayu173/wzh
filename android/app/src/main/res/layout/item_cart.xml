<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_m"
    android:background="@drawable/bg_card"
    android:elevation="@dimen/elevation_s"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/card_padding">

    <CheckBox
        android:id="@+id/cart_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/touch_target"
        android:minHeight="@dimen/touch_target" />

    <ImageView
        android:id="@+id/cart_item_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="@dimen/spacing_s"
        android:background="@drawable/bg_image_placeholder"
        android:clipToOutline="true"
        android:contentDescription="@null"
        android:outlineProvider="background"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_body" />

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/text_body" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_s"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cart_item_minus"
                android:layout_width="@dimen/touch_target"
                android:layout_height="@dimen/touch_target"
                android:background="@drawable/bg_quantity_button"
                android:gravity="center"
                android:text="@string/symbol_minus"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/cart_item_quantity"
                android:layout_width="40dp"
                android:layout_height="@dimen/touch_target"
                android:gravity="center"
                android:text="@string/quantity_default"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/cart_item_plus"
                android:layout_width="@dimen/touch_target"
                android:layout_height="@dimen/touch_target"
                android:background="@drawable/bg_quantity_button"
                android:gravity="center"
                android:text="@string/symbol_plus"
                android:textColor="@color/text_primary" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/cart_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/spacing_s"
        android:background="@drawable/bg_danger_outline_button"
        android:paddingStart="@dimen/spacing_m"
        android:paddingEnd="@dimen/spacing_m"
        android:paddingTop="@dimen/spacing_xs"
        android:paddingBottom="@dimen/spacing_xs"
        android:text="@string/action_delete"
        android:textColor="@color/error"
        android:textSize="@dimen/text_caption" />
</LinearLayout>
