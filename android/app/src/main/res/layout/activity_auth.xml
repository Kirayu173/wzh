<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xxl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/auth_back"
                android:layout_width="@dimen/touch_target"
                android:layout_height="@dimen/touch_target"
                android:contentDescription="@string/action_back"
                android:onClick="onBackClick"
                android:src="@drawable/ic_back"
                style="@style/Widget.Suyuan.IconButton" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_s"
                android:text="@string/auth_title"
                android:textAppearance="@style/TextAppearance.Suyuan.Title" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/auth_mode_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/touch_target"
            android:layout_marginTop="@dimen/spacing_xl"
            android:background="@drawable/bg_card"
            android:checkedButton="@id/tab_login"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tab_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/auth_tab_selector"
                android:gravity="center"
                android:text="@string/tab_login"
                android:textColor="@color/auth_tab_text_selector"
                android:textSize="@dimen/text_subtitle" />

            <RadioButton
                android:id="@+id/tab_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/auth_tab_selector"
                android:gravity="center"
                android:text="@string/tab_register"
                android:textColor="@color/auth_tab_text_selector"
                android:textSize="@dimen/text_subtitle" />
        </RadioGroup>

        <EditText
            android:id="@+id/input_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/spacing_xxl"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/hint_username"
            android:inputType="text"
            android:autofillHints="username"
            android:importantForAutofill="yes" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:importantForAutofill="yes" />

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/hint_phone"
            android:inputType="phone"
            android:autofillHints="phone"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="@string/action_login" />

        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_m"
            android:indeterminateTint="@color/color_primary"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
