<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_list_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_l">

        <ImageButton
            android:id="@+id/order_list_back"
            android:layout_width="@dimen/touch_target"
            android:layout_height="@dimen/touch_target"
            android:contentDescription="@string/action_back"
            android:onClick="onBackClick"
            android:src="@drawable/ic_back"
            style="@style/Widget.Suyuan.IconButton" />

        <TextView
            android:id="@+id/order_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_s"
            android:layout_weight="1"
            android:text="@string/order_list_title"
            android:textAppearance="@style/TextAppearance.Suyuan.Title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_status_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/spacing_l"
        android:paddingEnd="@dimen/spacing_l">

        <TextView
            android:id="@+id/order_tab_pending"
            android:layout_width="0dp"
            android:layout_height="@dimen/touch_target"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_selector"
            android:gravity="center"
            android:textColor="@color/tab_text_selector"
            android:textSize="@dimen/text_caption"
            android:textStyle="bold"
            android:text="@string/order_status_pending" />

        <TextView
            android:id="@+id/order_tab_paid"
            android:layout_width="0dp"
            android:layout_height="@dimen/touch_target"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_s"
            android:background="@drawable/bg_tab_selector"
            android:gravity="center"
            android:textColor="@color/tab_text_selector"
            android:textSize="@dimen/text_caption"
            android:textStyle="bold"
            android:text="@string/order_status_paid" />

        <TextView
            android:id="@+id/order_tab_shipped"
            android:layout_width="0dp"
            android:layout_height="@dimen/touch_target"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_s"
            android:background="@drawable/bg_tab_selector"
            android:gravity="center"
            android:textColor="@color/tab_text_selector"
            android:textSize="@dimen/text_caption"
            android:textStyle="bold"
            android:text="@string/order_status_shipped" />

        <TextView
            android:id="@+id/order_tab_completed"
            android:layout_width="0dp"
            android:layout_height="@dimen/touch_target"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_s"
            android:background="@drawable/bg_tab_selector"
            android:gravity="center"
            android:textColor="@color/tab_text_selector"
            android:textSize="@dimen/text_caption"
            android:textStyle="bold"
            android:text="@string/order_status_completed" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/order_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="@dimen/spacing_l" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/order_state_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/surface"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xxl"
            android:visibility="gone">

            <TextView
                android:id="@+id/order_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_empty"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body" />

            <Button
                android:id="@+id/order_state_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_m"
                style="@style/Widget.Suyuan.Button.Outline"
                android:text="@string/action_retry"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/order_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/spacing_s"
        android:visibility="gone">

        <Button
            android:id="@+id/order_page_prev"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touch_target"
            style="@style/Widget.Suyuan.Button.Outline"
            android:text="@string/page_prev" />

        <TextView
            android:id="@+id/order_page_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_m"
            android:layout_marginEnd="@dimen/spacing_m"
            android:text="@string/page_info"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_caption" />

        <Button
            android:id="@+id/order_page_next"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touch_target"
            style="@style/Widget.Suyuan.Button.Outline"
            android:text="@string/page_next" />
    </LinearLayout>
</LinearLayout>
