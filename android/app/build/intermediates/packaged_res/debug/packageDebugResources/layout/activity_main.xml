<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/main_nav_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@drawable/bg_bottom_nav"
        android:elevation="@dimen/elevation_m"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:button="@null"
            android:drawablePadding="@dimen/spacing_xs"
            android:drawableTop="@drawable/nav_home_selector"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_s"
            android:paddingBottom="@dimen/spacing_s"
            android:text="@string/nav_home"
            android:textColor="@color/nav_text_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/nav_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:button="@null"
            android:drawablePadding="@dimen/spacing_xs"
            android:drawableTop="@drawable/nav_cart_selector"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_s"
            android:paddingBottom="@dimen/spacing_s"
            android:text="@string/nav_cart"
            android:textColor="@color/nav_text_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:button="@null"
            android:drawablePadding="@dimen/spacing_xs"
            android:drawableTop="@drawable/nav_profile_selector"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_s"
            android:paddingBottom="@dimen/spacing_s"
            android:text="@string/nav_profile"
            android:textColor="@color/nav_text_selector"
            android:textSize="12sp" />
    </RadioGroup>
</LinearLayout>
