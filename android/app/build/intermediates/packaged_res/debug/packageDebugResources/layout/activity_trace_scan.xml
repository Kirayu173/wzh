<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/trace_scan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trace_scan_title"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/trace_scan_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/color_primary"
            android:text="@string/trace_action_scan"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/trace_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="@string/trace_input_hint"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <Button
            android:id="@+id/trace_query_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/color_primary"
            android:text="@string/trace_action_query"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/trace_record_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/color_primary"
            android:text="@string/trace_action_record"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>
