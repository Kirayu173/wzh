<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/admin_home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/admin_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin_home_title"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/admin_entry_product"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_primary_button"
        android:text="@string/admin_entry_product"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/admin_entry_order"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="@string/admin_entry_order" />

    <Button
        android:id="@+id/admin_entry_trace"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="@string/admin_entry_trace" />
</LinearLayout>
