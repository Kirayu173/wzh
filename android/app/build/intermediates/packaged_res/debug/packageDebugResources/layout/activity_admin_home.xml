<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/admin_home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="@dimen/spacing_xxl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/admin_home_back"
            android:layout_width="@dimen/touch_target"
            android:layout_height="@dimen/touch_target"
            android:contentDescription="@string/action_back"
            android:onClick="onBackClick"
            android:src="@drawable/ic_back"
            style="@style/Widget.Suyuan.IconButton" />

        <TextView
            android:id="@+id/admin_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_s"
            android:text="@string/admin_home_title"
            android:textAppearance="@style/TextAppearance.Suyuan.Title" />
    </LinearLayout>

    <Button
        android:id="@+id/admin_entry_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_marginTop="@dimen/spacing_xl"
        android:text="@string/admin_entry_product" />

    <Button
        android:id="@+id/admin_entry_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_marginTop="@dimen/spacing_m"
        style="@style/Widget.Suyuan.Button.Secondary"
        android:text="@string/admin_entry_order" />

    <Button
        android:id="@+id/admin_entry_trace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_marginTop="@dimen/spacing_m"
        style="@style/Widget.Suyuan.Button.Secondary"
        android:text="@string/admin_entry_trace" />
</LinearLayout>
