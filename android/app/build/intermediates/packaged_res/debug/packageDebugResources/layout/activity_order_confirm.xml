<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_confirm_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/order_confirm_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_l">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/order_confirm_back"
                        android:layout_width="@dimen/touch_target"
                        android:layout_height="@dimen/touch_target"
                        android:contentDescription="@string/action_back"
                        android:onClick="onBackClick"
                        android:src="@drawable/ic_back"
                        style="@style/Widget.Suyuan.IconButton" />

                    <TextView
                        android:id="@+id/order_confirm_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_s"
                        android:text="@string/order_confirm_title"
                        android:textAppearance="@style/TextAppearance.Suyuan.Title" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_m"
                    android:background="@drawable/bg_card"
                    android:elevation="@dimen/elevation_s"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_address"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_body"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/order_manage_address"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/touch_target"
                            style="@style/Widget.Suyuan.Button.Outline"
                            android:text="@string/action_manage_address" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/order_address_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_s"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_body" />

                    <TextView
                        android:id="@+id/order_address_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_caption" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_l"
                    android:text="@string/order_goods_title"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_confirm_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_s"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_l"
                    android:text="@string/order_memo_title"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/order_memo_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_s"
                    style="@style/Widget.Suyuan.EditText"
                    android:hint="@string/order_memo_hint"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:textSize="@dimen/text_body" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/order_confirm_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/surface"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xxl"
            android:visibility="gone">

            <TextView
                android:id="@+id/order_confirm_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_confirm_empty"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body" />

            <Button
                android:id="@+id/order_confirm_state_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_m"
                style="@style/Widget.Suyuan.Button.Outline"
                android:text="@string/action_retry"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/order_confirm_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@color/surface"
        android:elevation="@dimen/elevation_m"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/spacing_l"
        android:paddingEnd="@dimen/spacing_l">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_total"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_body" />

        <TextView
            android:id="@+id/order_confirm_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_s"
            android:layout_weight="1"
            android:text="@string/price_default"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/text_subtitle" />

        <Button
            android:id="@+id/order_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_submit" />
    </LinearLayout>
</LinearLayout>
