<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_l">

            <EditText
                android:id="@+id/home_search_input"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_height"
                android:layout_weight="1"
                style="@style/Widget.Suyuan.EditText"
                android:hint="@string/product_search_hint"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:importantForAutofill="no" />

            <Button
                android:id="@+id/home_search_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_height"
                android:layout_marginStart="@dimen/spacing_s"
                style="@style/Widget.Suyuan.Button.Outline"
                android:text="@string/action_search" />
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/home_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="@dimen/spacing_l" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/home_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_s"
            android:visibility="gone">

            <Button
                android:id="@+id/home_page_prev"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/touch_target"
                style="@style/Widget.Suyuan.Button.Outline"
                android:text="@string/page_prev" />

            <TextView
                android:id="@+id/home_page_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_m"
                android:layout_marginEnd="@dimen/spacing_m"
                android:text="@string/page_info"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_caption" />

            <Button
                android:id="@+id/home_page_next"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/touch_target"
                style="@style/Widget.Suyuan.Button.Outline"
                android:text="@string/page_next" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_state_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xxl"
        android:visibility="gone">

        <TextView
            android:id="@+id/home_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_empty"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_body" />

        <Button
            android:id="@+id/home_state_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.Button.Outline"
            android:text="@string/action_retry"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>
