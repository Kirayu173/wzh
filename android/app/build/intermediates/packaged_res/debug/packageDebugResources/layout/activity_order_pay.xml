<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_pay_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_xxl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="start|top">

        <ImageButton
            android:id="@+id/order_pay_back"
            android:layout_width="@dimen/touch_target"
            android:layout_height="@dimen/touch_target"
            android:contentDescription="@string/action_back"
            android:onClick="onBackClick"
            android:src="@drawable/ic_back"
            style="@style/Widget.Suyuan.IconButton" />

        <TextView
            android:id="@+id/order_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_s"
            android:text="@string/order_pay_title"
            android:textAppearance="@style/TextAppearance.Suyuan.Title" />
    </LinearLayout>

    <TextView
        android:id="@+id/order_pay_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_l"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_body" />

    <TextView
        android:id="@+id/order_pay_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_s"
        android:textColor="@color/color_primary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/order_pay_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_marginTop="@dimen/spacing_xl"
        android:text="@string/order_pay_action" />
</LinearLayout>
