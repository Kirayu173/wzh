<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/admin_trace_qrcode_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/spacing_l">

    <ImageView
        android:id="@+id/admin_trace_qrcode_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/admin_trace_qrcode_back"
        android:layout_width="@dimen/touch_target"
        android:layout_height="@dimen/touch_target"
        android:layout_gravity="top|start"
        android:contentDescription="@string/action_back"
        android:onClick="onBackClick"
        android:src="@drawable/ic_back"
        style="@style/Widget.Suyuan.IconButton" />

    <LinearLayout
        android:id="@+id/admin_trace_qrcode_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xxl"
        android:visibility="gone">

        <TextView
            android:id="@+id/admin_trace_qrcode_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_trace_qrcode_error"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_body" />

        <Button
            android:id="@+id/admin_trace_qrcode_state_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.Button.Outline"
            android:text="@string/action_retry"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>
