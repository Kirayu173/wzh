<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/admin_product_edit_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_l">

        <TextView
            android:id="@+id/admin_product_edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_product_edit_title"
            android:textAppearance="@style/TextAppearance.Suyuan.Title" />

        <EditText
            android:id="@+id/admin_product_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_product_name_hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/admin_product_input_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_product_price_hint"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/admin_product_input_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_product_stock_hint"
            android:inputType="number" />

        <EditText
            android:id="@+id/admin_product_input_origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_product_origin_hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/admin_product_input_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_product_cover_hint"
            android:inputType="textUri" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_product_status_label"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_body" />

            <Switch
                android:id="@+id/admin_product_status_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_s"
                android:text="@string/admin_product_status_online" />
        </LinearLayout>

        <EditText
            android:id="@+id/admin_product_input_desc"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:gravity="top"
            android:hint="@string/admin_product_desc_hint"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/admin_product_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/spacing_l"
            android:text="@string/action_save" />
    </LinearLayout>
</ScrollView>
