<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/admin_product_edit_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/admin_product_edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_product_edit_title"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/admin_product_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/admin_product_name_hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/admin_product_input_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/admin_product_price_hint"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/admin_product_input_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/admin_product_stock_hint"
            android:inputType="number" />

        <EditText
            android:id="@+id/admin_product_input_origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/admin_product_origin_hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/admin_product_input_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/admin_product_cover_hint"
            android:inputType="textUri" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_product_status_label"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/admin_product_status_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/admin_product_status_online" />
        </LinearLayout>

        <EditText
            android:id="@+id/admin_product_input_desc"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:hint="@string/admin_product_desc_hint"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/admin_product_save"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_primary_button"
            android:text="@string/action_save"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>
