<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/admin_trace_edit_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_l">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/admin_trace_edit_back"
                android:layout_width="@dimen/touch_target"
                android:layout_height="@dimen/touch_target"
                android:contentDescription="@string/action_back"
                android:onClick="onBackClick"
                android:src="@drawable/ic_back"
                style="@style/Widget.Suyuan.IconButton" />

            <TextView
                android:id="@+id/admin_trace_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_s"
                android:text="@string/admin_trace_edit_title"
                android:textAppearance="@style/TextAppearance.Suyuan.Title" />
        </LinearLayout>

        <EditText
            android:id="@+id/admin_trace_input_product_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_trace_product_id_hint"
            android:inputType="number" />

        <EditText
            android:id="@+id/admin_trace_input_batch_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_trace_batch_no_hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/admin_trace_input_origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_trace_origin_hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/admin_trace_input_producer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_trace_producer_hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/admin_trace_input_harvest_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_trace_harvest_hint"
            android:inputType="date" />

        <EditText
            android:id="@+id/admin_trace_input_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_trace_process_hint"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <EditText
            android:id="@+id/admin_trace_input_test_org"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_trace_test_org_hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/admin_trace_input_test_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_trace_test_date_hint"
            android:inputType="date" />

        <EditText
            android:id="@+id/admin_trace_input_test_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_trace_test_result_hint"
            android:inputType="text" />

        <EditText
            android:id="@+id/admin_trace_input_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            style="@style/Widget.Suyuan.EditText"
            android:hint="@string/admin_trace_report_hint"
            android:inputType="textUri" />

        <Button
            android:id="@+id/admin_trace_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/spacing_l"
            android:text="@string/action_save" />
    </LinearLayout>
</ScrollView>
